    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ProjectZed",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ProjectZed", // Path to the compiled executable
            "args": [], // Optional: Arguments to pass to your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}